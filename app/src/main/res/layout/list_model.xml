<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="9dp"
    android:background="#424242"
>

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"



        card_view:cardCornerRadius="4dp"

 card_view:cardElevation="@dimen/card_recycler_elevation"
        card_view:cardPreventCornerOverlap="true"
        android:layout_marginTop="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/idPic"
                android:layout_width="74dp"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"

                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:srcCompat="@drawable/eenadu"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintVertical_bias="1.0"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/idTitle"
                android:padding="6dp"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="SAKSHI"
                android:textAllCaps="true"
                android:textSize="21sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintRight_toLeftOf="@+id/textView4"
                android:layout_marginRight="8dp"
                card_view:layout_constraintHorizontal_bias="0.26"
                card_view:layout_constraintVertical_bias="0.38"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                card_view:layout_constraintLeft_toRightOf="@+id/idPic"
                card_view:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/idDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="10sp"
                android:textColor="#424242"
android:textAllCaps="true"

                android:text="@string/read_newspaper"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:layout_constraintHorizontal_bias="0.129"
                android:layout_marginTop="8dp"
                card_view:layout_constraintVertical_bias="0.93"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintLeft_toRightOf="@+id/idPic"
                card_view:layout_constraintTop_toTopOf="parent" />

            <View

                android:layout_width="2dp"
                android:layout_height="0dp"
                android:background="@color/colorAccentDark"
                android:id="@+id/view3"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintVertical_bias="0.0"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintLeft_toLeftOf="@+id/idPic"
                card_view:layout_constraintHorizontal_bias="0.79" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="64dp"
                android:layout_height="0dp"
                android:text="LATEST NEWS"
                android:textSize="13sp"
                android:layout_marginRight="8dp"
                android:textColor="#424242"
                android:clickable="true"
                android:paddingTop="14dp"
                android:textStyle="bold"
                android:elevation="3dp"
                android:textAlignment="center"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintHorizontal_bias="1.0"
                card_view:layout_constraintLeft_toLeftOf="@+id/view3"
                card_view:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>

